
@{
    ViewData["Title"] = "Aranan Araçlar";
}

<h1>Aranan Araçlar</h1>

<div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col mb-4">
                <div class="card">
                    <img class="card-img-top" src="/Img/Cars/@item.Resim1" alt="...">
                    <div class="product-details">
                        <h5 class="product-name">@item.Marka.Name @item.Modeli @item.KasaTipi</h5>
                        <p class="product-price">@item.Fiyati ₺</p>
                        <div class="text-center">
                            <a class="btn btn-outline-dark" href="/Arac/Index/@item.Id">İncele</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>